{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "sourceMap": true,
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "jsx": "react"
    },
    "include": ["src", "devtool", "typing", "testsite", "lib", "easy-post"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
